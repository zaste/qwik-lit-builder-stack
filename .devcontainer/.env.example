
# ================================
# DEVELOPMENT ENVIRONMENT TEMPLATE
# ================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# Basic App Configuration
NODE_ENV=development
VITE_APP_ENV=development
SITE_URL=http://localhost:5173

# ================================
# SUPABASE CONFIGURATION
# ================================
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role (for server-side operations only)
# ⚠️  NEVER expose this in client-side code
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Supabase Local Development (optional)
SUPABASE_ACCESS_TOKEN=your_supabase_access_token

# ================================  
# CLOUDFLARE CONFIGURATION
# ================================
# Get these from: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# Cloudflare Workers/Pages specific
CLOUDFLARE_ZONE_ID=your_zone_id
WRANGLER_DEV_URL=http://localhost:8787

# ================================
# BUILDER.IO CONFIGURATION  
# ================================
# Get these from: https://builder.io/account/organization
VITE_BUILDER_PUBLIC_KEY=your_builder_public_key
BUILDER_PRIVATE_KEY=your_builder_private_key

# Builder.io Preview Mode
VITE_BUILDER_CAN_TRACK=false
BUILDER_PREVIEW_MODE=true

# ================================
# DATABASE & STORAGE
# ================================
# Additional database URLs if using multiple databases
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# File upload limits
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/*,application/pdf

# ================================
# AUTHENTICATION
# ================================
# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=7d

# OAuth Providers (if using Supabase Auth)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id  
GITHUB_CLIENT_SECRET=your_github_client_secret

# ================================
# EMAIL CONFIGURATION
# ================================
# SMTP Settings (for local development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@localhost

# Email Service (production)
SENDGRID_API_KEY=your_sendgrid_api_key
RESEND_API_KEY=your_resend_api_key

# ================================
# ANALYTICS & MONITORING
# ================================
# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics (if using)
VITE_VERCEL_ANALYTICS=false

# Sentry (error tracking)
VITE_SENTRY_DSN=https://your-sentry-dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ================================
# PERFORMANCE & OPTIMIZATION
# ================================
# Bundle Analysis
ANALYZE_BUNDLE=false
QWIK_INSIGHTS=false

# Image Optimization
VITE_IMAGE_DOMAINS=your-domain.com,cdn.example.com

# ================================
# DEVELOPMENT TOOLS
# ================================
# Storybook
STORYBOOK_PORT=6006

# Testing
VITEST_UI=false
PLAYWRIGHT_HEADLESS=true

# Mock API (for offline development)
VITE_USE_MOCK_API=false
MOCK_API_DELAY=500

# ================================
# SECURITY
# ================================
# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:4173

# CSP (Content Security Policy)
CSP_REPORT_URI=https://your-domain.report-uri.com/r/d/csp/enforce

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ================================
# FEATURE FLAGS
# ================================
VITE_FEATURE_BETA_COMPONENTS=false
VITE_FEATURE_ANALYTICS=true
VITE_FEATURE_PWA=false
VITE_FEATURE_OFFLINE_MODE=false

# ================================
# API KEYS (Third-party services)
# ================================
# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret

# Maps & Location
GOOGLE_MAPS_API_KEY=your_google_maps_key

# AI/ML Services
OPENAI_API_KEY=your_openai_api_key

# ================================
# CODESPACES SPECIFIC
# ================================
# These are auto-populated in GitHub Codespaces
# CODESPACE_NAME=auto-populated
# GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN=auto-populated

# ================================
# LOCAL DEVELOPMENT OVERRIDES
# ================================
# Useful for team-specific settings
# DEV_TEAM_MEMBER=your_name
# DEBUG_LEVEL=info
# MOCK_EXTERNAL_APIS=true
