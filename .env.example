# Application
NODE_ENV=development
SITE_URL=https://localhost:5173

# Supabase (Primary Backend)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Cloudflare (Edge Services)
# These are automatically available in Cloudflare Pages/Workers
# For local dev, use Wrangler or miniflare
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_API_TOKEN=your_api_token

# Builder.io (CMS)
BUILDER_PUBLIC_KEY=your_builder_public_key_here
BUILDER_PRIVATE_KEY=your_builder_private_key_here
BUILDER_WEBHOOK_SECRET=your_webhook_secret_here

# Monitoring
SENTRY_DSN=https://your_sentry_dsn@sentry.io/123456
SENTRY_ENVIRONMENT=development
DATADOG_CLIENT_TOKEN=your_datadog_client_token
DATADOG_APPLICATION_ID=your_datadog_app_id

# Analytics
GA_TRACKING_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Feature Flags
FEATURE_NEW_DASHBOARD=true
FEATURE_BETA_EDITOR=false
FEATURE_REALTIME_COLLAB=true

# Email (Development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM=noreply@example.com

# Deployment Target
DEPLOY_TARGET=cloudflare