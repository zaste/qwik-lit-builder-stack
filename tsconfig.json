{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2021",
    "module": "ES2022", 
    "lib": ["ES2022", "DOM", "WebWorker", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "@builder.io/qwik",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "outDir": "tmp",
    "noEmit": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "types": [
      "vite/client",
      "@cloudflare/workers-types",
      "@types/node"
    ],
    "paths": {
      "~/*": ["./src/*"],
      "@qwik-city-plan": ["./src/routes"]
    }
  },
  "include": ["src", "tests", ".eslintrc.cjs", "scripts"],
  "exclude": ["node_modules", "dist", "server", "tmp", "build", "**/*.test.ts", "**/*.spec.ts", "tests/e2e", "src/design-system/foundation/tokens/dist/**"]
}
