{
  "name": "qwik-lit-builder-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "setup": "mv npmrc .npmrc 2>/dev/null || true && mv eslintrc.cjs .eslintrc.cjs 2>/dev/null || true && mv gitignore .gitignore 2>/dev/null || true",
    "dev": "vite --mode ssr --host 0.0.0.0",
    "dev:all": "pnpm dev",
    "dev:debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr",
    "dev:ssl": "vite --mode ssr --host 0.0.0.0 --https --cert .certs/localhost.crt --key .certs/localhost.key",
    "build": "qwik build",
    "build.client": "vite build",
    "build.server": "vite build --config adapters/cloudflare-pages/vite.config.ts",
    "build:cloudflare": "DEPLOY_TARGET=cloudflare qwik build && node scripts/prepare-cloudflare-deployment.js",
    "build:analyze": "vite build --mode analyze",
    "preview": "qwik build preview && vite preview --ssr src/entry.preview.tsx --host 0.0.0.0",
    "preview:ssl": "qwik build preview && vite preview --ssr src/entry.preview.tsx --host 0.0.0.0 --https",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:components": "web-test-runner",
    "test:e2e": "playwright test",
    "test:e2e:critical": "playwright test tests/e2e/critical-flows.spec.ts",
    "test:accessibility": "playwright test tests/e2e/accessibility.spec.ts",
    "test:lighthouse": "lhci autorun",
    "test:all": "npm run test:unit && npm run test:e2e && npm run test:accessibility",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\"",
    "secrets:generate": "node scripts/generate-secrets.js",
    "secrets:upload": "bash scripts/upload-secrets.sh",
    "secrets:upload-github": "bash scripts/upload-secrets-github.sh",
    "secrets:upload-cloudflare": "bash scripts/upload-secrets-cloudflare.sh",
    "cloudflare:setup": "bash scripts/setup-cloudflare-resources.sh",
    "setup:automated": "npm run secrets:generate && npm run cloudflare:setup && npm run secrets:upload-github",
    "setup:hybrid": "npm run secrets:generate && npm run cloudflare:setup && npm run secrets:upload-github && npm run secrets:upload-cloudflare",
    "setup:validate": "bash scripts/validate-setup.sh",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "supabase:types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > src/lib/database.types.ts",
    "supabase:link": "supabase link --project-ref $SUPABASE_PROJECT_ID",
    "supabase:migrate": "supabase db push",
    "supabase:seed": "supabase db seed",
    "cache:clear": "wrangler kv:key delete --binding=KV --all",
    "storage:list": "wrangler r2 object list --bucket=$R2_BUCKET_NAME",
    "deploy:cloudflare": "npm run build:cloudflare && wrangler pages deploy dist",
    "validate:deployment": "node scripts/validate-cloudflare-deployment.js",
    "test:deployment": "wrangler pages dev dist",
    "clean": "rimraf dist .turbo node_modules/.vite",
    "clean:all": "pnpm clean && rimraf node_modules pnpm-lock.yaml",
    "analyze:bundle": "vite-bundle-visualizer",
    "lighthouse": "lighthouse http://localhost:5173 --view",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "codespace:setup": ".devcontainer/scripts/post-create.sh",
    "codespace:open-preview": "gh codespace ports visibility 5173:public -c $CODESPACE_NAME",
    "migration:verify": "npx tsx scripts/migration/orchestrator.ts verify",
    "test:schemas": "npx tsx scripts/validate-schemas.ts",
    "test:quick": "npm run test:schemas && npm run test"
  },
  "dependencies": {
    "@builder.io/qwik": "^1.14.1",
    "@builder.io/qwik-city": "^1.14.1",
    "@lit/reactive-element": "^2.0.0",
    "@lit/task": "^1.0.2",
    "@sentry/browser": "^7.120.3",
    "@sentry/node": "^9.33.0",
    "@supabase/ssr": "^0.3.0",
    "@supabase/supabase-js": "^2.39.0",
    "@types/dompurify": "^3.0.5",
    "dompurify": "^3.2.6",
    "lit": "^3.3.0",
    "web-vitals": "^3.5.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@custom-elements-manifest/analyzer": "^0.9.0",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@playwright/test": "^1.41.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/ui": "^3.2.4",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-playwright": "^0.11.1",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "dotenv": "^16.3.0",
    "eslint": "^8.56.0",
    "eslint-plugin-qwik": "^1.4.0",
    "form-data": "^4.0.3",
    "happy-dom": "^18.0.1",
    "husky": "^8.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.0",
    "miniflare": "^3.20231030.0",
    "playwright": "^1.41.0",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "rimraf": "^5.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "supabase": "^1.142.0",
    "tailwindcss": "^3.4.0",
    "terser": "^5.43.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vercel": "^33.0.0",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.3.0",
    "vitest": "^3.2.4",
    "wrangler": "^3.22.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "vite": "^5.1.0"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ]
    }
  }
}
